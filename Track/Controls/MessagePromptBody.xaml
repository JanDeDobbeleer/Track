<UserControl x:Class="Track.Controls.MessagePromptBody"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot" Background="{StaticResource TrackColorBrush}">
        <RichTextBox Margin="0,0,0,24" TextAlignment="Left" Foreground="White">
            <Paragraph>
                <Bold>Location service request</Bold>
            </Paragraph>
            <Paragraph>
                <LineBreak />
                <Run>Track needs to use your phone's location service to locate the stations that are nearby...</Run>
                <LineBreak />
                <LineBreak />
                <Run>Please allow this to let the app function correctly.</Run>
                <LineBreak />
            </Paragraph>
        </RichTextBox>
    </Grid>
</UserControl>